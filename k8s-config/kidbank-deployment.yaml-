apiVersion: v1
kind: Service
metadata:
  name: kidbank-service
spec:
  selector:
    app: kidbank
#    tier: frontend
  ports:
  - protocol: "TCP"
    port: 80
    targetPort: 80
  type: NodePort

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kidbank-deployment
  labels:
    app: kidbank
#    tier: frontend
spec:
  selector:
    matchLabels:
      app: kidbank
#      tier: frontend
  replicas: 1
  template:
    metadata:
      labels:
        app: kidbank
#        tier: frontend
    spec:
      containers:
      - name: kidbank
        image: agapelee/kidbanktest
#        imagePullPolicy: Always
        ports:
        - containerPort: 9000
